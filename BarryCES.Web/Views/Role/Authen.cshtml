@{
    ViewBag.Title = "角色授权";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}

@section styles{
   
    @Styles.Render("~/content/css/plugins/ztree/style")
}

@section scripts{
    @Scripts.Render("~/content/js/roleauthen")
}

<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>角色授权</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-12">
                    <button id="btnSave" class="btn btn-w-m btn-primary" type="button">保存</button>
                    <button id="btnClear" class="btn btn-w-m btn-danger" type="button">清空</button>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            角色列表
                        </div>
                        <div class="panel-body">
                            <ul id="roleTree" class="ztree"></ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            权限菜单
                        </div>
                        <div class="panel-body">
                            <ul id="menuTree" class="ztree"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
